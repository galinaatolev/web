@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Beauty Moldova</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Montserrat', sans-serif;
        }
        
        .auth-container {
            padding: 50px 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.75) 100%), url('/Content/images/beauty-background.jpg');
            background-size: cover;
            background-position: center;
        }
        
        .auth-logo {
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
            font-weight: 700;
            color: #e83e8c;
        }
        
        .auth-card {
            max-width: 500px;
            width: 100%;
            background-color: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .auth-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
            color: #333;
        }
        
        .auth-form .form-group {
            margin-bottom: 20px;
        }
        
        .auth-form .form-control {
            height: 50px;
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 10px 15px;
            font-size: 16px;
        }
        
        .auth-form .form-control:focus {
            border-color: #e83e8c;
            box-shadow: 0 0 0 0.2rem rgba(232,62,140,0.25);
        }
        
        .auth-form .btn-primary {
            background-color: #e83e8c;
            border-color: #e83e8c;
            height: 50px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            margin-top: 10px;
        }
        
        .auth-form .btn-primary:hover {
            background-color: #d83178;
            border-color: #d83178;
        }
        
        .auth-links {
            margin-top: 20px;
            text-align: center;
        }
        
        .auth-links a {
            color: #e83e8c;
            text-decoration: none;
        }
        
        .auth-links a:hover {
            text-decoration: underline;
        }
        
        .validation-summary-errors {
            color: #dc3545;
            margin-bottom: 20px;
        }
        
        .validation-summary-errors ul {
            padding-left: 20px;
        }
        
        .field-validation-error {
            font-size: 14px;
            color: #dc3545;
            margin-top: 5px;
            display: block;
        }
        
        .auth-footer {
            margin-top: 30px;
            font-size: 14px;
            color: #777;
            text-align: center;
        }
        
        .auth-social {
            margin-top: 30px;
            text-align: center;
            border-top: 1px solid #eee;
            padding-top: 20px;
        }
        
        .auth-social p {
            margin-bottom: 15px;
            font-size: 14px;
            color: #555;
        }
        
        .social-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin: 0 5px;
            background-color: #f5f5f5;
            color: #333;
            transition: all 0.3s ease;
        }
        
        .social-btn:hover {
            transform: translateY(-3px);
        }
        
        .social-btn.facebook {
            background-color: #3b5998;
            color: white;
        }
        
        .social-btn.google {
            background-color: #dd4b39;
            color: white;
        }
        
        .social-btn.twitter {
            background-color: #1da1f2;
            color: white;
        }
        
        .auth-decoration {
            position: absolute;
            z-index: -1;
        }
        
        .auth-decoration.top-right {
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background-color: rgba(232,62,140,0.05);
            border-radius: 0 0 0 100%;
        }
        
        .auth-decoration.bottom-left {
            bottom: 0;
            left: 0;
            width: 300px;
            height: 300px;
            background-color: rgba(232,62,140,0.05);
            border-radius: 0 100% 0 0;
        }
        
        .back-to-home {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 16px;
            color: #333;
            text-decoration: none;
            display: flex;
            align-items: center;
        }
        
        .back-to-home i {
            margin-right: 5px;
        }
        
        .back-to-home:hover {
            color: #e83e8c;
            text-decoration: none;
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="auth-container">
        <a href="@Url.Action("Index", "Home")" class="back-to-home">
            <i class="fas fa-arrow-left"></i> Back to home page
        </a>
        
        <div class="auth-decoration top-right"></div>
        <div class="auth-decoration bottom-left"></div>
        
        <div class="auth-card">
            <div class="auth-logo">Beauty Moldova</div>
            <h1 class="auth-title">@ViewBag.Title</h1>
            
            @RenderBody()
            
            <div class="auth-social">
                <p>Or connect with:</p>
                <a href="#" class="social-btn facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-btn google"><i class="fab fa-google"></i></a>
                <a href="#" class="social-btn twitter"><i class="fab fa-twitter"></i></a>
            </div>
            
            <div class="auth-footer">
                &copy; @DateTime.Now.Year Beauty Moldova. All rights reserved.
            </div>
        </div>
    </div>

    <!-- Javascript files-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html> 