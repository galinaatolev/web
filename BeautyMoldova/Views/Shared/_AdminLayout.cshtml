@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <div class="flex flex-col lg:flex-row gap-6">
        <!-- Admin Sidebar Menu -->
        <div class="lg:w-1/4 w-full mb-4">
            <div class="bg-white rounded-lg shadow-md sticky top-5">
                <div class="bg-gray-800 text-white py-3 px-4 rounded-t-lg">
                    <h5 class="font-semibold">Admin Panel</h5>
                </div>
                <div class="p-0">
                    <div class="flex flex-col">
                        <a href="@Url.Action("Index", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-tachometer-alt w-5 text-center mr-2"></i> Dashboard
                        </a>
                        <a href="@Url.Action("Products", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Products" || ViewContext.RouteData.Values["Action"].ToString() == "CreateProduct" || ViewContext.RouteData.Values["Action"].ToString() == "EditProduct" || ViewContext.RouteData.Values["Action"].ToString() == "DeleteProduct" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-box-open w-5 text-center mr-2"></i> Products
                        </a>
                        <a href="@Url.Action("Categories", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" || ViewContext.RouteData.Values["Action"].ToString() == "CreateCategory" || ViewContext.RouteData.Values["Action"].ToString() == "EditCategory" || ViewContext.RouteData.Values["Action"].ToString() == "DeleteCategory" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-list w-5 text-center mr-2"></i> Categories
                        </a>
                        <a href="@Url.Action("Manufacturers", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Manufacturers" || ViewContext.RouteData.Values["Action"].ToString() == "CreateManufacturer" || ViewContext.RouteData.Values["Action"].ToString() == "EditManufacturer" || ViewContext.RouteData.Values["Action"].ToString() == "DeleteManufacturer" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-industry w-5 text-center mr-2"></i> Manufacturers
                        </a>
                        <a href="@Url.Action("Orders", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" || ViewContext.RouteData.Values["Action"].ToString() == "OrderDetails" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-shopping-bag w-5 text-center mr-2"></i> Orders
                        </a>
                        <a href="@Url.Action("Customers", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Customers" || ViewContext.RouteData.Values["Action"].ToString() == "CustomerDetails" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-users w-5 text-center mr-2"></i> Customers
                        </a>
                        <a href="@Url.Action("Roles", "Admin")" 
                           class="flex items-center px-4 py-3 border-b border-gray-100 hover:bg-gray-50 transition-colors @(ViewContext.RouteData.Values["Action"].ToString() == "Roles" || ViewContext.RouteData.Values["Action"].ToString() == "CreateRole" || ViewContext.RouteData.Values["Action"].ToString() == "EditRole" ? "bg-pink-500 text-white hover:bg-pink-600" : "")">
                            <i class="fas fa-user-tag w-5 text-center mr-2"></i> Role Management
                        </a>
                        <a href="@Url.Action("Index", "Home")" 
                           class="flex items-center px-4 py-3 hover:bg-gray-50 transition-colors rounded-b-lg">
                            <i class="fas fa-store w-5 text-center mr-2"></i> Go to Website
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="lg:w-3/4 w-full">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none'">
                        <span class="text-green-500">&times;</span>
                    </button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none'">
                        <span class="text-red-500">&times;</span>
                    </button>
                </div>
            }
            
            @RenderBody()
        </div>
    </div>
</div>

@section scripts {
    @RenderSection("scripts", required: false)
}